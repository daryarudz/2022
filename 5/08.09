def build_person(first_name, last_name, second_name, user_Prof, user_Group, user_Department):
    person = {'first': first_name, 'last': last_name, 'second': second_name, 'Prof': user_Prof, 'Grooup': user_Group, 'Department': user_Department}
    return person
musician = build_person('Dasha', 'Ruzd', 'Kamranovna', 'programmer', 'DCMS', 'fspo')
print(musician)




def make_album(singer, name_after, dsv = ''):
    person = {'names': singer, 'names_after': name_after}
    if dsv:
        person['num'] = dsv
    return person
a = make_album('Oxxxymiron', 'Переплетено')
print(a)
b = make_album('Ольга Бузова', 'wifi', '10')
print(b)
